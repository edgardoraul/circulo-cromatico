// Variables de color de estructuras de layout
$color_control = rgba(84, 120, 113, 0.7)
$color_borde = #666
$color_letra = #fff
$color_rojizo = rgb(231,45,12);

*
    // color $color_borde
    transition all 0.1s ease-in-out

.controles
    font-size 1.5rem

    .paletitas
        display inline-block
        background none
        border none
        height 0
        opacity 0
        position relative
        visibility hidden
        width 0
        z-index 0
    
    &__muestrario
        background-color transparent
        border 1px solid $color_borde
        border-radius 20px
        content ""
        display inline-block
        height 25px
        margin-left -1rem
        vertical-align middle
        width 25px
    
    &__boton
        background $color_borde
        border-radius 4px
        color $color_letra
        display inline-block
        font-family monospace
        font-size 1.8rem
        padding 0.4rem 0.9rem
        
        &:hover
            background $color_control
            cursor pointer
        
        &:active
            background $color_rojizo

    &__inputnumber
        display none

#colorizadores
    label
        border-radius 20px
        display inline-block
        margin-right 0.5rem
        padding 0.2rem 0.5rem
        position relative
        transition all 0.3s ease-in-out

        &:hover
        &:active
            background $color_control
            color $color_letra
            cursor pointer