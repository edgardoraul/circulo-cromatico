// Un círculo cromático hecho con CSS en forma animada

// Normalizando 
@import 'normalize.styl'
@import 'funciones'
@import 'node_modules/nib/index'

// Para dar un centrado y que todo se contenga en las cajas
*
	box-sizing border-box
	text-align center


// Oculta todas las barras de desplazamiento
::-webkit-scrollbar
	display none

body
	color #555

.contenedor
	padding 1rem

.circulo
	animation-name: girador
	animation-timing-function: linear
	animation-duration: 1s
	animation-iteration-count: infinite
	border-radius 50%
	display inline-block
	max-width 450px
	max-height 450px
	overflow hidden

	img, svg, canvas
		border 1px solid red
		border-radius 50%
		display block
		height 300px
		width 300px
		

.controles
	padding 0.5rem


